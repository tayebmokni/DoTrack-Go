modules = ["go", "golang-1.21", "python-3.11", "go-1.21"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "GPS Tracking Server"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Protocol Test"

[[workflows.workflow]]
name = "GPS Tracking Server"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "TEST_MODE=true TCP_PORT=5023 PORT=8000 JWT_ACCESS_SECRET=test_jwt_secret_key_123 MONGODB_URI=mongodb://localhost:27017/tracking go run cmd/server/main.go"

[[workflows.workflow]]
name = "Protocol Test"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "go run cmd/test/test_protocols.go"

[deployment]
run = ["sh", "-c", "TEST_MODE=true TCP_PORT=5023 PORT=8000 JWT_ACCESS_SECRET=test_jwt_secret_key_123 MONGODB_URI=mongodb://localhost:27017/tracking go run cmd/server/main.go"]

[[ports]]
localPort = 5023
externalPort = 3000

[[ports]]
localPort = 8000
externalPort = 80
